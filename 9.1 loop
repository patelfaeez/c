for loop
#include <stdio.h>

void main()
{
    int i;
    int num;
    printf("enter how many times you want:");
    scanf("%d",&num);
    for(i=1;i<=num;i++)
    {
    printf("\nHello world %d",i);
    }
}
********************************************************

reverse loop
#include <stdio.h>

void main()
{
    int i;
    int num;
    printf("enter how many times you want:");
    scanf("%d",&num);
    for(i=num;i>=0;i--)
    {
    printf("\nHello world %d",i);
    }
}

**********************************************************

// sum loop //
#include <stdio.h>

void main()
{
    int i;
    int num;
    printf("enter how many times you want:");
    scanf("%d",&num);
    int sum=0;
    for(i=1;i<=num;i++)
    {
    sum=sum+i;
    }
    printf("%d",sum);
}
